{
    "name": "Polyglot",
    "version": "1.0",
    "description": "Live subtitling and translation for videos on the browser.",
    "manifest_version": 2,
    "permissions": ["declarativeContent", "activeTab"],
    "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "src/popup.html"
    }
  }
